<div class="container my-4">
    <h1 class="text-center">Dynamic Graphs</h1>
    <div id="graphs-container" class="row"></div>
    <button id="add-graph-btn" class="btn btn-primary mt-4">Add Graph</button>
</div>

<!-- Graph Configuration Modal -->
<div
    class="modal fade"
    id="graphConfigModal"
    tabindex="-1"
    role="dialog"
    aria-labelledby="graphConfigModalLabel"
    aria-hidden="true"
>
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="graphConfigModalLabel">
                    Configure Graph
                </h5>
                <button
                    type="button"
                    class="close"
                    data-dismiss="modal"
                    aria-label="Close"
                >
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- Form for selecting fields, filters, graph type -->
                <form id="graph-config-form">
                    <div class="form-group">
                        <label for="graph-type">Graph Type</label>
                        <select class="form-control" id="graph-type">
                            <option value="line">Line</option>
                            <option value="bar">Bar</option>
                            <!-- Add other graph types as needed -->
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="group-by">Group By</label>
                        <input type="text" class="form-control" id="group-by" />
                    </div>
                    <div id="filter-fields">
                        <!-- Dynamically add filter fields here -->
                    </div>
                    <button
                        type="button"
                        class="btn btn-secondary"
                        id="add-filter-btn"
                    >
                        Add Filter
                    </button>
                </form>
            </div>
            <div class="modal-footer">
                <button
                    type="button"
                    class="btn btn-secondary"
                    data-dismiss="modal"
                >
                    Close
                </button>
                <button
                    type="button"
                    class="btn btn-primary"
                    id="save-graph-btn"
                >
                    Save Graph
                </button>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="/scripts/home.js"></script>
