<link rel="stylesheet" href="/css/home.css" />

<div id="top" class="container">
    <div class="page-name h4">Dashboard</div>
    <div id="error_message" class="text-danger-color"></div>
    <div id="success_message" class="text-success-color"></div>
    <div id="loading_message"></div>
</div>

<div class="container">
    <!-- Button to trigger modal -->
    <button
        type="button"
        class="btn btn-main"
        data-bs-toggle="modal"
        data-bs-target="#chartModal"
    >
        Create Chart
    </button>

    <!-- Modal HTML -->
    <div
        class="modal fade"
        id="chartModal"
        tabindex="-1"
        aria-labelledby="chartModalLabel"
        aria-hidden="true"
    >
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="chartModalLabel">
                        Create Chart
                    </h5>
                    <button
                        type="button"
                        class="btn-close"
                        data-bs-dismiss="modal"
                        aria-label="Close"
                    ></button>
                </div>
                <div class="modal-body">
                    <form id="chartForm">
                        <!-- Filter fields (optional) -->
                        <div class="mb-3">
                            <label class="form-label">Filter by Fields</label>
                            <div id="filterFields"></div>
                            <!-- Checkbox group for filters -->
                        </div>

                        <!-- Group by fields (required) -->
                        <div class="mb-3">
                            <label class="form-label">Group by Fields</label>
                            <div id="groupByFields"></div>
                            <!-- Checkbox group for grouping -->
                        </div>

                        <!-- Chart Type -->
                        <div class="mb-3">
                            <label class="form-label">Chart Type</label>
                            <div>
                                <input
                                    type="radio"
                                    id="chartBar"
                                    name="chartType"
                                    value="bar"
                                    required
                                />
                                <label for="chartBar">Bar Chart</label>

                                <input
                                    type="radio"
                                    id="chartPie"
                                    name="chartType"
                                    value="pie"
                                    required
                                />
                                <label for="chartPie">Pie Chart</label>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary">
                            Create Chart
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="/scripts/home.js"></script>
</div>
